    <!-- partial -->

    <div class="top-div">
      <div class="child-div a">
        <h2>Weather Poppy</h2>
        <span>A Weather Forecast App</span>
        <div class="child-child-div-a">
          <form action="/submit" method="post">
            <p>Enter latitude and logitude:</p>
            <input type="text" placeholder="Latitude" name="lat">
            <input type="text" placeholder="Longitutde" name="lon">
            <button>Check</button>
          </form>
        </div>
      </div>
      <div class="child-div b">
        <div class="weather cloud-sun-container">
          <i class="fas fa-cloud innerCloud"></i>
          <i class="fas fa-sun sun"></i>
          <span><%=temp%>Â°C</span>
        </div>

        <div class="child-child-div-b">
          <div class="flex1 flexa">
            <div class="flexaa">
              <i class="fas fa-cloud-sun"></i>
              <i class="fas fa-cloud"></i>
              <i class="fas fa-wind"></i>
              <i class="fas fa-cloud-rain"></i>
            </div>
            <div class="flexab">
              <span><%=weather%></span>
              <span><%= cloud%> okta</span>
              <span><%=wind%> km/h</span>
              <span><%=rain%> mm</span>
            </div>
          </div>

          <div class="flex2">
            <span class="place"><%=place%></span>
            <span class="time"><%=time%></span>
          </div>
        </div>
      </div>
    </div>
  </body>
